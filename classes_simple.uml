@startuml
!theme plain

' EntitÃ©s principales
class Candidat {
  - id: Integer
  - nom: String
  - email: String
  - codeSession: String
  - estValide: Boolean
}

class SessionTest {
  - id: Integer
  - codeSession: String
  - dateDebut: LocalDateTime
  - dateFin: LocalDateTime
  - scoreTotal: Integer
  - estTermine: Boolean
}

class Question {
  - id: Integer
  - libelle: String
  - explication: String
}

class ReponsePossible {
  - id: Integer
  - libelle: String
  - estCorrect: Boolean
}

class CreneauHoraire {
  - id: Integer
  - dateExam: LocalDate
  - placesDisponibles: Integer
  - estComplet: Boolean
}

class Inscription {
  - id: Integer
  - dateInscription: LocalDateTime
  - estConfirme: Boolean
}

class SessionQuestion {
  - id: Integer
  - ordreAffichage: Integer
  - tempsAlloue: Integer
}

class ReponseCandidat {
  - id: Integer
  - tempsReponse: Integer
  - estCorrect: Boolean
}

class Administrateur {
  - id: Integer
  - username: String
  - password: String
  - email: String
}

class Theme {
  - id: Integer
  - nom: String
  - description: String
}

' Relations principales
Candidat "1" --> "0..*" SessionTest : sessions
Candidat "1" --> "0..*" Inscription : inscriptions

CreneauHoraire "1" --> "0..*" SessionTest : sessions
CreneauHoraire "1" --> "0..*" Inscription : inscriptions

Theme "1" --> "0..*" Question : questions

SessionTest "1" --> "0..*" SessionQuestion : questions
Question "1" --> "0..*" SessionQuestion : sessions

Question "1" --> "0..*" ReponsePossible : reponses

SessionQuestion "1" --> "0..*" ReponseCandidat : reponses
ReponsePossible "0..1" --> "0..*" ReponseCandidat : reponses

@enduml
